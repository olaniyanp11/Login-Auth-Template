    <ul class="space-y-2">
      <!-- Dashboard -->
      <li>
        <a href="/admin"
          class="flex items-center px-4 py-2 rounded text-gray-300 hover:bg-gray-800 hover:text-blue-500 transition">
          <span class="material-icons mr-2">dashboard</span> Dashboard
