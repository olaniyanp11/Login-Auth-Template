<%- include('../../partials/header') %>
<div class="min-h-screen flex flex-col bg-black" style="padding-top:10vh;">
  <div class="flex flex-1">
    <!-- Sidebar -->
    <%- include('./partials/sidebar') %>

    <!-- Main Content -->
    <main class="flex-1 p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <!-- Total Courses -->
        <div class="bg-[#0c0c0c] rounded-lg shadow p-6 flex items-center space-x-4">
          <div class="bg-blue-100 text-blue-600 rounded-full p-3">
            <span class="material-icons">assignment</span>
          </div>
          <div>
            <div class="text-lg font-semibold"><%= activeCourses %></div>
            <div class="text-gray-500 text-sm">Courses Taken</div>
          </div>
        </div>

        <!-- GPA -->
        <div class="bg-[#0c0c0c] rounded-lg shadow p-6 flex items-center space-x-4">
          <div class="bg-green-100 text-green-600 rounded-full p-3">
            <span class="material-icons">check_circle</span>
          </div>
          <div>
            <div class="text-lg font-semibold"><%= gpa %></div>
            <div class="text-gray-500 text-sm">GPA</div>
          </div>
        </div>

        <!-- Dummy Notification Count -->
        <div class="bg-[#0c0c0c] rounded-lg shadow p-6 flex items-center space-x-4">
          <div class="bg-yellow-100 text-yellow-600 rounded-full p-3">
            <span class="material-icons">notifications</span>
          </div>
          <div>
            <div class="text-lg font-semibold">2</div>
            <div class="text-gray-500 text-sm">Notifications</div>
          </div>
        </div>
      </div>

      <!-- Recent Activities -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-[#0c0c0c] rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold mb-4 text-white flex items-center gap-2">
            <span>Recent Activity</span>
            <span class="material-icons text-blue-700 animate-spin">history</span>
          </h2>
          <ul class="space-y-3">
            <% grades.slice(0, 3).forEach(g => { %>
              <li class="bg-[#141414] p-3 rounded flex items-center">
                <span class="material-icons text-green-500 mr-2">grade</span>
                Scored <%= g.score %> in <%= g.course?.title %>
                <span class="ml-auto text-xs text-gray-400"><%= g.updatedAt.toDateString() %></span>
              </li>
            <% }) %>
          </ul>
        </div>

        <!-- Notifications (static/dummy for now) -->
        <div class="bg-[#0c0c0c] rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold mb-4 text-white">Notifications</h2>
          <ul class="space-y-2">
            <li class="bg-[#141414] p-3 rounded flex items-center">
              <span class="material-icons text-blue-400 mr-2">announcement</span>
              New course registration starts Monday
            </li>
            <li class="bg-[#141414] p-3 rounded flex items-center">
              <span class="material-icons text-yellow-400 mr-2">mail</span>
              Lecturer updated your grade
            </li>
          </ul>
        </div>
      </div>
    </main>
  </div>
</div>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<%- include('../../partials/footer') %>
